{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "curl"
     "fd"
     "git"
     "gnupg"
     "jq"
     "node"
     "pinentry-mac"
     "autojump"
     "ripgrep"
     "tmux"
     "git-delta"
     "git"
     "entr"
     "go"
     "wget" -}}
{{ $casks := list
     "spotify"
     "tailscale"
     "telegram"
     "karabiner-elements"
     "kitty" -}}

brew bundle --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
{{ end -}}
